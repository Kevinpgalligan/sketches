(defsketch tutorial
    ((width 500)
     (height 500)
     (circle-x 100)
     (circle-y 100))
  (background +white+)
  (setf circle-x (mod (+ circle-x (- (random 6) 3)) width))
  (with-pen (make-pen :fill +red+)
    (circle circle-x circle-y 50))
  (with-pen (make-pen :stroke +blue+ :weight 2)
    (bezier 50 300 100 350 300 100 400 400)))
